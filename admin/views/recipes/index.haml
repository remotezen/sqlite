%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:recipes, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:recipes, :new)
.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    -form_tag url(:recipes, :destroy_many), :method => :delete do
                      =hidden_field_tag :recipes_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:recipe, :id)
        %th.header= mat(:recipe, :title)
        %th.header= mat(:recipe, :content)
        %th.header= mat(:recipe, :course)
        %th.header= mat(:recipe, :prep_time)
        %th.header= mat(:recipe,:cooking_time)
        %th.header.list-row-action-header
    %tbody
      -@recipes.each do |recipe|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'recipes_id[]', :value => recipe.id, :class => 'list-selectable-checkbox'
          %td.list-column=recipe.id
          %td.list-column=recipe.title
          %td.list-column=recipe.content
          %td.list-column=recipe.course
          %td.list-column=recipe.prep_time
          %td.list-column=recipe.cooking_time
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:recipes, :edit, :id => recipe.id), :rel => :tooltip, 
                :title => "#{pat(:edit)} recipe", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} recipe", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "recipe")
                .popover-content
                  -form_tag url(:recipes, :destroy, :id => recipe.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
    :javascript
      $(document).ready( function() {
        jQuery('a.colorbox').colorbox();
      } );                    
        jQuery('a.colorbox').colorbox();
