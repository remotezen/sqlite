%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:comments, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:posts, :new)
.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    -form_tag url(:posts, :destroy_many), :method => :delete do
                      =hidden_field_tag :post_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:comment, :id)
        %th.header= mat(:comment, :post_id)
        %th.header= mat(:comment, :comment)
        %th.header= mat(:comment, :created_at)
        %th.header.list-row-action-header
    %tbody
      -@comments.each do |c|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'post_ids[]', :value => c.id, :class => 'list-selectable-checkbox'
          %td.list-column=c.id
          %td.list-column=c.post_id
          %td.list-column=link_to "#{word_wrap(c.comment, line_width:8)}",url_for("comments/show/#{c.post_id}")
          %td.list-column=time_ago_in_words c.created_at
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} comment", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "comment")
                .popover-content
                  -form_tag url(:comments, :destroy, :id => c.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
  =will_paginate @comments
